<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 內部顏色 -->
    <solid
        android:color="@color/txt_white" />
    <!-- 邊緣線條顏色 -->
    <stroke
        android:width="1dp"
        android:color="@color/txt_white" />
    <!-- 圓角的幅度 -->
    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp" />

    <gradient
        android:angle="180"
        android:centerColor="@color/txt_white"
        android:endColor="@color/txt_white"
        android:startColor="@color/txt_white" />
</shape>